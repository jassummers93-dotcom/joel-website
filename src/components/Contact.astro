---
// TODO: Replace with actual email
const email = "summerscreativemedia@gmail.com";

const socialLinks = [
  {
    label: 'LinkedIn',
    href: 'https://www.linkedin.com/in/joel-summers-1875a28b/',
    icon: 'linkedin',
    color: 'hover:text-[#0A66C2]'
  }
];
---

<section id="contact" class="py-24 md:py-32">
  <div class="section-container">
    <div class="max-w-2xl mx-auto text-center">
      <div class="animate-on-scroll">
        <span class="text-accent font-medium text-sm uppercase tracking-widest mb-4 block">Get In Touch</span>
        <h2 class="section-heading">Let's Work Together</h2>
        <p class="text-text-muted mb-10 leading-relaxed">
          Interested in collaborating on a project or have questions about my work?
          I'd love to hear from you.
        </p>
      </div>

      <!-- Email -->
      <div class="animate-on-scroll mb-12 px-4" style="transition-delay: 0.1s;">
        <a
          href={`mailto:${email}`}
          class="inline-flex flex-wrap items-center justify-center gap-3 px-6 py-4 sm:px-8 bg-accent text-white font-semibold rounded-xl hover:bg-accent/90 transition-all duration-300 hover:scale-105 shadow-lg shadow-accent/20 max-w-full"
        >
          <svg class="w-6 h-6 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
          </svg>
          <span class="text-xs sm:text-base break-all">{email}</span>
        </a>
      </div>

      <!-- Social Links -->
      <div class="animate-on-scroll" style="transition-delay: 0.2s;">
        <p class="text-text-muted text-sm mb-6">Or connect with me on:</p>
        <div class="flex justify-center gap-6">
          {socialLinks.map((link) => (
            <a
              href={link.href}
              target="_blank"
              rel="noopener noreferrer"
              class={`group flex flex-col items-center gap-2 text-text-muted transition-colors duration-300 ${link.color}`}
              aria-label={link.label}
            >
              <span class="w-14 h-14 bg-surface border border-border rounded-xl flex items-center justify-center group-hover:border-current transition-colors duration-300">
                {link.icon === 'linkedin' && (
                  <svg class="w-7 h-7" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                  </svg>
                )}
                {link.icon === 'imdb' && (
                  <img src="/images/icons/imdb_edited.png" alt="IMDB" class="w-7 h-7 object-contain" />
                )}
                {link.icon === 'mobygames' && (
                  <img src="/images/icons/mobygames_edited.png" alt="MobyGames" class="w-7 h-7 object-contain" />
                )}
              </span>
              <span class="text-xs font-medium">{link.label}</span>
            </a>
          ))}
        </div>
      </div>
    </div>
  </div>
</section>
