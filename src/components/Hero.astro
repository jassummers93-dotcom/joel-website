---
const tagline = "";
---

<section id="hero" class="relative min-h-screen flex items-center justify-center overflow-hidden">
  <!-- Background Image -->
  <div class="absolute inset-0">
    <img
      src="/images/hero/background.png"
      alt=""
      class="w-full h-full object-cover opacity-40"
    />
    <div class="absolute inset-0 bg-gradient-to-b from-background/50 via-background/70 to-background"></div>
  </div>

  <!-- Waveform Animation Background -->
  <div class="absolute inset-0 flex items-center justify-center opacity-10 pointer-events-none">
    <div class="flex items-end gap-1 h-32">
      {Array.from({ length: 40 }).map((_, i) => (
        <div
          class="waveform-bar w-1 bg-accent rounded-full"
          style={`height: ${20 + Math.random() * 80}%; animation-delay: ${i * 0.05}s;`}
        />
      ))}
    </div>
  </div>

  <!-- Content -->
  <div class="relative z-10 section-container text-center">
    <div class="max-w-4xl mx-auto">
      <!-- Logo -->
      <div class="mb-8 fade-in" style="animation-delay: 0.1s;">
        <img
          src="/images/hero/logo.png"
          alt="Summers Creative Media Ltd"
          class="h-20 md:h-28 w-auto mx-auto"
        />
      </div>

      <!-- Name -->
      <h1 class="font-display text-5xl md:text-7xl lg:text-8xl font-bold mb-4 fade-in" style="animation-delay: 0.2s;">
        Joel Summers
      </h1>

      <!-- Title -->
      <p class="text-xl md:text-2xl text-accent font-medium mb-8 fade-in" style="animation-delay: 0.3s;">
        Audio Professional for Games & Interactive Media
      </p>

      <!-- Tagline -->
      <p class="text-lg md:text-xl text-text-muted leading-relaxed max-w-2xl mx-auto mb-12 fade-in" style="animation-delay: 0.5s;">
        {tagline}
      </p>

    </div>
  </div>

  <!-- Scroll Indicator -->
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2 fade-in" style="animation-delay: 0.8s;">
    <a href="#about" class="flex flex-col items-center gap-2 text-text-muted hover:text-text-primary transition-colors group">
      <span class="text-xs uppercase tracking-widest">Scroll</span>
      <div class="w-6 h-10 border-2 border-current rounded-full flex justify-center pt-2">
        <div class="w-1 h-2 bg-current rounded-full animate-bounce"></div>
      </div>
    </a>
  </div>
</section>
