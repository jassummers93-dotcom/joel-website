---
const currentYear = new Date().getFullYear();
---

<footer class="py-8 border-t border-border">
  <div class="section-container">
    <div class="flex flex-col md:flex-row items-center justify-between gap-4">
      <!-- Logo & Copyright -->
      <div class="flex items-center gap-3">
        <img
          src="/images/hero/logo.png"
          alt="Summers Creative Media"
          class="h-8 w-auto opacity-70"
        />
        <span class="text-text-muted text-sm">
          &copy; {currentYear} Summers Creative Media Ltd. All rights reserved.
        </span>
      </div>

      <!-- Back to Top -->
      <a
        href="#hero"
        class="flex items-center gap-2 text-text-muted hover:text-accent transition-colors text-sm"
      >
        Back to top
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 10l7-7m0 0l7 7m-7-7v18" />
        </svg>
      </a>
    </div>
  </div>
</footer>
